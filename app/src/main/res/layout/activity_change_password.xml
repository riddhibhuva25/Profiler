<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ashGray"
    tools:context=".ChangePasswordActivity">

   <ImageView
       android:id="@+id/img_back"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:src="@drawable/ic_back"
      android:paddingTop="14dp"
      android:paddingStart="14dp"/>


   <ImageView
       android:id="@+id/imgMain"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/ic_change_password"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_marginTop="80dp"/>

   <TextView
       android:id="@+id/title"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:text="Reset your password"
       android:textSize="20sp"
       android:textColor="@color/white"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/imgMain"
       android:layout_marginTop="20dp"
       />
   
   <EditText
       android:id="@+id/edtEnterPassword1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:layout_marginHorizontal="30dp"
      android:background="@drawable/bg_square_white"
      android:hint="Enter your old password"
      android:padding="14dp"
      android:textColor="@color/black"
      android:textSize="14sp"
      app:layout_constraintTop_toBottomOf="@+id/title"
       android:maxLength="10"
       android:maxLines="1"
       android:imeOptions="actionNext"
       android:inputType="textPassword"
      android:layout_marginTop="80dp"/>

   <EditText
       android:id="@+id/edtEnterNewPassword2"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginHorizontal="30dp"
       android:background="@drawable/bg_square_white"
       android:hint="Enter your new password"
       android:padding="14dp"
       android:textColor="@color/black"
       android:textSize="14sp"
       android:maxLength="10"
       android:maxLines="1"
       app:layout_constraintTop_toBottomOf="@+id/edtEnterPassword1"
       android:imeOptions="actionNext"
       android:inputType="textPassword"
       android:layout_marginTop="20dp"/>




   <EditText
       android:id="@+id/edtCnNewPassword3"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginHorizontal="30dp"
       android:background="@drawable/bg_square_white"
       android:hint="Confirm your  password"
       android:padding="14dp"
       android:textColor="@color/black"
       android:textSize="14sp"
       android:maxLength="10"
       android:maxLines="1"
       app:layout_constraintTop_toBottomOf="@+id/edtEnterNewPassword2"
       android:imeOptions="actionNext"
       android:inputType="textPassword"
       android:layout_marginTop="20dp"/>

   <TextView
       android:id="@+id/btnResetPassword"
       android:layout_width="200dp"
       android:layout_height="wrap_content"
       android:text="Reset your password"
       android:padding="16dp"
       android:textAlignment="center"
       android:textColor="@color/ashGray"
       android:textSize="16sp"
       android:textStyle="bold"
      android:background="@drawable/bg_round_white"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_marginTop="70dp"
       app:layout_constraintTop_toBottomOf="@+id/edtCnNewPassword3"/>


</androidx.constraintlayout.widget.ConstraintLayout>